<Page
    x:Class="WiredBrainCoffee_Customer_Manager_App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WiredBrainCoffee_Customer_Manager_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50" Click="ButtonAddCustomer_Click">
            <Button.Content>
                <StackPanel Margin="5" Orientation="Horizontal">
                    <SymbolIcon Symbol="AddFriend"/>
                    <TextBlock Text="Add Customer" Margin="5 0 0 0"/>
                </StackPanel>
            </Button.Content>
        </Button>
    </Grid>
</Page>
